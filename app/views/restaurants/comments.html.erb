<% provide(:title, @restaurant.name) %>
<div class="general-page-container">
    <div class="span7">
          <div class="profile-title">
             <%= @restaurant.name %>
          </div>
          <div class="comments">
          <div class="existing-comments">
           <ul>
            <% for comment in @comments %>

            
            
            <li>
            <%= comment.name %> - <%= comment.date %> 
        </li>
        <br>
        <li>
            <%= comment.content %>
        </li>
        <li>
            <%= comment.rating %>
        </li>
        <br>

        <% end %>
    </ul>
  </div>

 <h2>Add Comment</h2>

<%= form_for (@comment) do |f| %>
    

      <%= f.label :content, "Comment" %>
      <%= f.text_field :content %>
      <%= f.label :rating, "Rating" %>
      <%= f.text_field :rating %>
      <%= f.hidden_field :date, :value => Date.today %>
      <%= f.hidden_field :id, :value => @restaurant.id %>
      <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
      <%= f.hidden_field :name, :value => 'Arthur' %>
      <%= f.hidden_field :user_id, :value => 1 %>

      <%= f.submit "Submit", class: "btn btn-large btn-primary"%>
    <% end %>
  
</div>
    </div>
     <div class="span5">
        <ul>
       <li><%= link_to image_tag("menus.png", :class => "menu",  alt: "Menus"), menu_restaurant_path %>
       </li>
       <li><%= link_to image_tag("book_a_table.png", :class => "menu", alt: "Book A Table"), booking_restaurant_path %>
       </li>
       <li><%= link_to image_tag("find_on_map.png", :class => "menu", alt: "Find On Map"), map_restaurant_path %>
       </li>
       <li><%= link_to image_tag("comment.png", :class => "menu", alt: "Comment"), comments_restaurant_path %>
       </li>
       <li><%= link_to image_tag("share.png", :class => "menu", alt: "Share"), 'http://www.apple.com/ie/' %>
       </li>
      </ul>
      <%= link_to image_tag("app_store.jpeg", :class => "app-store-img", :size => "172x66", alt: "App Store"), 'http://www.apple.com/ie/' %>
     </div>
</div>
